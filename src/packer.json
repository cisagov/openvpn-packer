{
  "builders": [
    {
      "ami_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "xvda",
          "encrypted": true,
          "volume_size": 8,
          "volume_type": "gp2"
        }
      ],
      "ami_name": "openvpn-hvm-{{timestamp}}-x86_64-ebs",
      "ami_regions": "{{user `deploy_regions`}}",
      "instance_type": "t3.micro",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "xvda",
          "encrypted": true,
          "volume_size": 8,
          "volume_type": "gp2"
        }
      ],
      "region": "{{user `build_region`}}",
      "region_kms_key_ids": [
        {
          "us-east-1": "{{user `kms_key_id_us_east_1`}}",
          "us-east-2": "{{user `kms_key_id_us_east_2`}}",
          "us-west-1": "{{user `kms_key_id_us_west_1`}}",
          "us-west-2": "{{user `kms_key_id_us_west_2`}}"
        }
      ],
      "source_ami_filter": {
        "filters": {
          "name": "debian-stretch-hvm-x86_64-gp2-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "379101102735"
        ]
      },
      "ssh_username": "admin",
      "tags": {
        "Application": "OpenVPN",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "OS_Version": "Debian Stretch",
        "Pre_Release": "{{user `pre_release`}}",
        "Release": "{{user `image_version`}}",
        "Team": "CISA - Development",
        "Travis_Job_Web_URL": "{{user `travis_job_web_url`}}"
      },
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "groups": [
        "aws",
        "openvpn"
      ],
      "playbook_file": "src/playbook.yml",
      "type": "ansible"
    }
  ],
  "sensitive-variables": [],
  "variables": {
    "build_region": "{{env `PACKER_BUILD_REGION`}}",
    "deploy_regions": "{{env `PACKER_DEPLOY_REGIONS`}}",
    "image_version": "{{env `PACKER_IMAGE_VERSION`}}",
    "kms_key_id_us_east_1": "{{env `PACKER_KMS_KEY_ID_US_EAST_1`}}",
    "kms_key_id_us_east_2": "{{env `PACKER_KMS_KEY_ID_US_EAST_2`}}",
    "kms_key_id_us_west_1": "{{env `PACKER_KMS_KEY_ID_US_WEST_1`}}",
    "kms_key_id_us_west_2": "{{env `PACKER_KMS_KEY_ID_US_WEST_2`}}",
    "pre_release": "{{env `PACKER_PRE_RELEASE`}}",
    "travis_job_web_url": "{{env `TRAVIS_JOB_WEB_URL`}}"
  }
}
